# ======================
# API Configuration
# ======================

# Backend API URL
# For local development: http://localhost:3001/api/v1
# For production: https://yourdomain.com/api/v1
# For Docker Compose: http://localhost:3001/api/v1
REACT_APP_API_URL=http://localhost:3001/api/v1

# ======================
# Feature Flags (Optional)
# ======================

# Enable analytics tracking (default: false)
REACT_APP_ENABLE_ANALYTICS=false

# Enable error reporting with Sentry (default: false)
REACT_APP_ENABLE_SENTRY=false

# Sentry DSN (if ENABLE_SENTRY is true)
REACT_APP_SENTRY_DSN=

# ======================
# Build Configuration (Optional)
# ======================

# Generate source maps for production builds (default: true)
# Set to false for production to reduce bundle size and improve security
GENERATE_SOURCEMAP=false

# ======================
# App Configuration (Optional)
# ======================

# App version (displayed in UI)
REACT_APP_VERSION=1.0.0

# App name (default: Lumina)
REACT_APP_NAME=Lumina

# ======================
# Development (Optional)
# ======================

# Enable React strict mode (default: true)
REACT_APP_STRICT_MODE=true

# Enable development tools (default: false in production)
REACT_APP_DEV_TOOLS=false
